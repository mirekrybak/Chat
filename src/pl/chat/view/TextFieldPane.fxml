<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.chat.controller.TextFieldPaneController">
   <bottom>
      <TextField fx:id="messageTextField" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </BorderPane.margin>
      </TextField>
   </bottom>
   <left>
      <ScrollPane hbarPolicy="NEVER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" vbarPolicy="NEVER" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="5.0" top="10.0" />
         </BorderPane.margin>
         <content>
            <TextArea fx:id="chatTextArea" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="279.0" prefWidth="400.0">
               <font>
                  <Font size="10.0" />
               </font></TextArea>
         </content>
      </ScrollPane>
   </left>
   <right>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="validateButton" alignment="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Validate">
               <VBox.margin>
                  <Insets left="5.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Consolas" size="10.0" />
               </font>
            </Button>
            <TextField fx:id="userTextField" alignment="CENTER">
               <VBox.margin>
                  <Insets left="5.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <ScrollPane hbarPolicy="NEVER" prefHeight="215.0" prefWidth="150.0" vbarPolicy="NEVER">
               <content>
                  <TextArea fx:id="usersTextArea" prefHeight="215.0" prefWidth="150.0">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </TextArea>
               </content>
               <VBox.margin>
                  <Insets bottom="10.0" left="5.0" right="10.0" top="10.0" />
               </VBox.margin>
            </ScrollPane>
         </children>
      </VBox>
   </right>
</BorderPane>
